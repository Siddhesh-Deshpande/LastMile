<configuration>

    <!-- ========== FILE APPENDER (only your logs) ========== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>NotificationService/logs/application.json</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>NotificationService/logs/application-%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <!-- ========== CONSOLE APPENDER (show EVERYTHING in terminal) ========== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========== Only your package logs go to FILE ========== -->
    <logger name="com.example.NotificationService.controller.NotificationController" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/> <!-- your logs also visible in terminal -->
    </logger>
    <logger name="com.example.NotificationService.service.NotificationService" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/> <!-- your logs also visible in terminal -->
    </logger>

    <!-- ========== Root logger sends EVERYTHING to console only ========== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
